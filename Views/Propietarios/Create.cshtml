@model inmoCabreraNet.Models.Propietario

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Propietario</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">DNI</label>
                <input asp-for="pro_dni" class="form-control" />
                <span asp-validation-for="pro_dni" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Nombre</label>
                <input asp-for="pro_nombre" class="form-control" />
                <span asp-validation-for="pro_nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Fecha Nacimiento</label>
                <input asp-for="pro_fechanac" class="form-control" />
                <span asp-validation-for="pro_fechanac" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Direccion</label>
                <input asp-for="pro_direc" class="form-control" />
                <span asp-validation-for="pro_direc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Telefono</label>
                <input asp-for="pro_telef" class="form-control" />
                <span asp-validation-for="pro_telef" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Email</label>
                <input asp-for="pro_email" class="form-control" />
                <span asp-validation-for="pro_email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary boton-form" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
