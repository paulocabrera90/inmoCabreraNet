@model inmoCabreraNet.Models.Propietario

@{
    ViewData["Title"] = "Borrar Propietario";
}

<h1>Borrar</h1>
<div>
    <h4>Propietario</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
           DNI 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.pro_dni)
        </dd>
        <dt class = "col-sm-2">
           Nombre
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.pro_nombre)
        </dd>
        <dt class = "col-sm-2">
           Fecha Nacimiento
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.pro_fechanac)
        </dd>
        <dt class = "col-sm-2">
            Dirección
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.pro_direc)
        </dd>
        <dt class = "col-sm-2">
           Teléfono
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.pro_telef)
        </dd>
        <dt class = "col-sm-2">
          Email
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.pro_email)
        </dd>
    </dl>
    
   <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger boton-form" onclick="javascript:return borrar();" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>


<script>
function borrar ()
  {
      rc = confirm("¿Seguro que desea eliminar el Propietario?");
      return rc;
  }
</script>
