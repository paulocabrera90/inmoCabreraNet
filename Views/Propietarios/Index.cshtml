@model IEnumerable<inmoCabreraNet.Models.Propietario>

@{
    ViewData["Title"] = "Listado de Propietarios";
}
<h1>Listado de Propietarios</h1>

<p>
    <a asp-action="Create">Nuevo Propietario</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
               DNI
            </th>
            <th>
                Nombre
            </th>
            <th>
                Email
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.pro_dni)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.pro_nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.pro_email)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {  id=item.pro_id  }) |
                @Html.ActionLink("Details", "Details", new { id=item.pro_id }) |
                @Html.ActionLink("Delete", "Delete", new {  id=item.pro_id  })
            </td>
        </tr>
}
    </tbody>
</table>
