@model inmoCabreraNet.Models.Inquilino

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Inquilino</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          
             <div class="form-group">
                <label class="control-label">DNI</label>
                <input asp-for="inq_dni" class="form-control" />
                <span asp-validation-for="inq_dni" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Nombre</label>
                <input asp-for="inq_nombre" class="form-control" />
                <span asp-validation-for="inq_nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Fecha Nacimiento</label>
                <input asp-for="inq_fechanac" type="date" class="form-control" />
                <span asp-validation-for="inq_fechanac" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Direccion de trabajo</label>
                <input asp-for="inq_domicilioTrabajo" class="form-control" />
                <span asp-validation-for="inq_domicilioTrabajo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Telefono</label>
                <input asp-for="inq_telef" class="form-control" />
                <span asp-validation-for="inq_telef" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Email</label>
                <input asp-for="inq_email" class="form-control" />
                <span asp-validation-for="inq_email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary boton-form" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
